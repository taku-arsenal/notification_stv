function getAllSpreadsheets() {
  var files = DriveApp.getFilesByType(MimeType.GOOGLE_SHEETS);
  var spreadsheets = [];
  
  while (files.hasNext()) {
    var file = files.next();
    var spreadsheet = SpreadsheetApp.openById(file.getId());
    spreadsheets.push(spreadsheet);
  }
  
  return spreadsheets;
}
