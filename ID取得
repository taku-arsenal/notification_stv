function getSpreadSheetId(sheetName) {
  var files = DriveApp.getFilesByName(sheetName);
  
  while (files.hasNext()) {
    var file = files.next();
    var spreadsheet = SpreadsheetApp.openById(file.getId());
    
    return spreadsheet; // スプレッドシートを返す（最初に見つかったもの）
  }
  
  return null; // スプレッドシートが見つからなかった場合は null を返す
}
