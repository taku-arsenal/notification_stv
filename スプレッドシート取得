function getSheetByNameFromSpreadsheets(sheetName) {
  var allSpreadsheets = getAllSpreadsheets();

  for (var i = 0; i < allSpreadsheets.length; i++) {
    var spreadsheet = allSpreadsheets[i];
    var sheets = spreadsheet.getSheets();

    for (var j = 0; j < sheets.length; j++) {
      var sheet = sheets[j];
      if (sheet.getSheetName() === sheetName) {
        return sheet.getParent();
      }
    }
  }
  
  return null; // スプレッドシートが見つからなかった場合は null を返す
}
